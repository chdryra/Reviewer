<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
   
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    	  
    <!-- Dividers -->
    <style name="HorizontalDivider">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dp</item>
	    <item name="android:background">?android:attr/listDivider</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
    <style name="VerticalDivider">
	    <item name="android:layout_width">1dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">?android:attr/listDivider</item>
	    <item name="android:gravity">center_horizontal</item>
	</style>

    <!-- Buttons -->
    <style name="SquareImageButton">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@drawable/selector_slate_smoke</item>
	    <item name="android:scaleType">centerInside</item>
	    <item name="android:layout_gravity">center_horizontal|center_vertical</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:clickable">true</item>
    </style>

    <style name="SimpleTransparentButton">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:background">@android:color/transparent</item>
    </style>
    
    <!-- GridViews -->
    <style name="GridView">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
    	<item name="android:gravity">center</item>
    	<item name ="android:numColumns">2</item>
    	<item name="android:paddingLeft">@dimen/grid_view_left_padding</item>
    	<item name="android:paddingRight">@dimen/grid_view_right_padding</item>
    	<item name="android:stretchMode">none</item>
    	<item name="android:horizontalSpacing">@dimen/grid_view_horizontal_spacing</item>
    	<item name="android:verticalSpacing">@dimen/grid_view_vertical_spacing</item>
    </style>
    
    <!-- GridCells -->
    <style name="GridCell">
    	<item name="android:layout_width">match_parent</item>    
    	<item name="android:layout_height">match_parent</item>
    </style>

    <!-- ImageViews -->
    <style name="ImageView">
    	<item name="android:layout_width">match_parent</item>    
    	<item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- ImageViews -->
    <style name="Button">
    	<item name="android:layout_width">match_parent</item>    
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- TextViews -->
    <style name="TextViewGridCell">
    	<item name="android:layout_width">match_parent</item>    
    	<item name="android:layout_height">match_parent</item>
    	<item name="android:gravity">center</item>
    	<item name="android:padding">@dimen/grid_item_text_padding</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="TextViewGridCell.Large">
    	<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <style name="TextViewGridCell.Small">
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <!-- EditTexts -->
    <style name="EditTextCapSentences">
    	<item name="android:layout_width">match_parent</item>    
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:inputType">textCapSentences|textAutoCorrect</item>
    </style>

    <style name="EditTextCapSentences.Go">
    	<item name="android:imeOptions">actionGo</item>
    </style>
    
   	<style name="EditTextCapSentences.Next">
    	<item name="android:imeOptions">actionNext</item>
    </style>
    
   	<style name="EditTextCapSentences.Done">
    	<item name="android:imeOptions">actionDone</item>
    </style>
    
     <style name="EditTextCapSentences.AutoComplete">
    	<item name="android:completionThreshold">2</item>
    </style>
   
    <style name="EditTextCapSentences.AutoComplete.Go">
    	<item name="android:imeOptions">actionGo</item>
    </style>
    
   	<style name="EditTextCapSentences.AutoComplete.Next">
    	<item name="android:imeOptions">actionNext</item>
    </style>
    
   	<style name="EditTextCapSentences.AutoComplete.Done">
    	<item name="android:imeOptions">actionDone</item>
    </style>

   	<!-- Rating bars -->
   	<style name="RatingBarFiveStar">
   	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
   	</style>
   	
   	<style name="RatingBarFiveStar.Indicator">
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
		<item name="android:isIndicator">true</item>
   	</style>
   	
   	<style name="RatingBarFiveStar.PointFiveStep">
        <item name="android:stepSize">0.5</item>    
   	</style>
   	
   	<style name="RatingBarFiveStar.PointOneStep">
        <item name="android:stepSize">0.1</item>    
   	</style>
   	
   	<style name="RatingBarFiveStar.Indicator.PointFiveStep">
        <item name="android:stepSize">0.5</item>    
   	</style>
   	
   	<style name="RatingBarFiveStar.Indicator.PointOneStep">
        <item name="android:stepSize">0.1</item>    
   	</style>
   	
   	<!-- Linear Layouts -->
   	<style name="LineaLayoutVertical">
   	    <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">match_parent</item>
    	<item name="android:orientation">vertical</item> 
   	</style>
   	
   	<style name="LineaLayoutHorizontal">
   	    <item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">match_parent</item>
    	<item name="android:orientation">horizontal</item> 
   	</style>
   	
   	<style name="LineaLayoutVertical.GridCell">
		<item name="android:layout_gravity">center</item>
   	</style>
   	
   	<style name="LineaLayoutHorizontal.GridCell">
   	    <item name="android:layout_gravity">center</item> 
   	</style>
   	
   	<style name="LineaLayoutVertical.WrappedVertical">
    	<item name="android:layout_height">wrap_content</item>
   	</style>
   	
   	<style name="LineaLayoutHorizontal.WrappedVertical">
    	<item name="android:layout_height">wrap_content</item>
   	</style>
   	    
</resources>
