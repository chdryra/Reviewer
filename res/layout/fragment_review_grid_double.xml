<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LineaLayoutVertical">

    <include
        android:id="@+id/review_subject_edit_text"
        layout="@layout/review_subject" />

    <View style="@style/HorizontalDivider" />

    <include
        android:id="@+id/review_rating_bar"
        layout="@layout/review_rating" />

    <View style="@style/HorizontalDivider" />

    <LinearLayout
        style="@style/LineaLayoutHorizontal.WrappedVertical" >

        <include
            android:id="@+id/banner_button_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/review_banner_button" />

        <View style="@style/VerticalDivider" />

        <View style="@style/VerticalDivider" />

        <include
            android:id="@+id/banner_button_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/review_banner_button" />
    </LinearLayout>

    <View style="@style/HorizontalDivider" />

    <LinearLayout
        style="@style/LineaLayoutHorizontal"
        android:baselineAligned="false">

        <include
            android:id="@+id/data_gridview_left"
            android:layout_weight="1"
            layout="@layout/review_data_grid" />

        <include
            android:id="@+id/data_gridview_right"
            android:layout_weight="1"
            layout="@layout/review_data_grid" />
    </LinearLayout>

</LinearLayout>