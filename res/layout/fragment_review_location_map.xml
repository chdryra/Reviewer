<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapLinearLayout"
    style="@style/LineaLayoutVertical.WrappedVertical" >

    <com.chdryra.android.myandroidwidgets.ClearableAutoCompleteTextView
        android:id="@+id/edit_text_name_location"
        style="@style/EditTextCapSentences.AutoComplete.Done"
        android:hint="@string/edit_text_name_location_hint" />

    <com.google.android.gms.maps.MapView
    	xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        tools:ignore="InefficientWeight" />

    <View style="@style/HorizontalDivider" />

    <ImageButton
        android:id="@+id/revert_location_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_revert_location_cd"
        android:src="@drawable/ic_menu_revert" />

</LinearLayout>