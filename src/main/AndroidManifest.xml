<manifest
    package="com.chdryra.android.reviewer"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <permission
        android:name="com.chdryra.android.reviewer.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="com.chdryra.android.reviewer.permission.MAPS_RECEIVE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-pemission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <supports-screens android:anyDensity="true"/>
    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Reviewer.SlateSmoke">

        <!-- Main -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityFeed"
            android:label="@string/activity_title_feed"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- General grid view -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityReviewView"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <!-- Build review -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityBuildReview"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <!-- Share review -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityShareReview"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <!-- Edit review data-->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityEditData"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <!-- Browser choose link -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityEditUrlBrowser"
            android:configChanges="orientation"
            android:exported="true"
            android:label="@string/activity_title_url"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Reviewer"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityReviewView"/>
        </activity>

        <!-- Browser View link -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityViewUrlBrowser"
            android:configChanges="orientation"
            android:exported="true"
            android:label="@string/activity_title_url"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Reviewer"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityReviewView"/>
        </activity>

        <!-- Map choose location -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityEditLocationMap"
            android:configChanges="orientation"
            android:exported="true"
            android:label="@string/activity_title_location"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Reviewer"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityReviewView"/>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_location_map"/>
        </activity>

        <!-- Browser choose link -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityViewLocation"
            android:configChanges="orientation"
            android:exported="true"
            android:label="@string/activity_title_location"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Reviewer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityReviewView"/>
        </activity>

        <!-- Facebook login -->
        <activity
            android:name=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivitySocialAuthUi"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlugIns.UiPlugin.UiAndroid.Implementation.Activities.ActivityShareReview"/>
        </activity>

        <activity android:name="com.facebook.FacebookActivity"
                  android:configChanges=
                      "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider1671165596505199"
                  android:name="com.facebook.FacebookContentProvider"
                  android:exported="true" />

        <service android:name=".Social.Implementation.ReviewSharerService" />
        <!-- Key for GMaps and setting up Google Play -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/key_google_maps"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8da4736859f5fafc0973444794bad88ff8307bf6" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
    </application>
</manifest>
