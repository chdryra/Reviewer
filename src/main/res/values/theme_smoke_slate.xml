<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Slate Smoke -->
    <style name="Theme.Reviewer.SmokeSlate">
        <item name="dominantBackground">@color/Smoke</item>
        <item name="inverseBackground">@color/Slate</item>
        <item name="transBackground">@color/TransSmoke</item>
        <item name="darkBackground">@color/DarkSmoke</item>
        <item name="transDarkBackground">@color/TransDarkSmoke</item>
        <item name="dominantText">@color/Slate</item>
        <item name="hintText">@color/TransSlate</item>
        <item name="inverseText">@color/Smoke</item>
        <item name="android:windowBackground">@color/Smoke</item>
        <item name="android:colorBackground">@color/Smoke</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/Widget.AutoCompleteTextView.SmokeSlate
        </item>
        <item name="android:textViewStyle">@style/Widget.TextView.SmokeSlate</item>
        <item name="android:editTextStyle">@style/Widget.EditText.SmokeSlate</item>
        <item name="android:buttonStyle">@style/Widget.Button.SmokeSlate</item>
        <item name="android:gridViewStyle">@style/Widget.GridView.SmokeSlate</item>
        <item name="viewHolderStyle">@style/Widget.GridCell.SmokeSlate</item>
        <item name="android:alertDialogTheme">@style/Theme.Dialog.SmokeSlate</item>
        <item name="android:dialogTheme">@style/Theme.Dialog.SmokeSlate</item>
    </style>

    <style name="Widget.AutoCompleteTextView.SmokeSlate">
        <item name="android:textColor">@color/Slate</item>
        <item name="android:textColorPrimaryInverse">@color/Smoke</item>
        <item name="android:textColorHint">@color/Slate</item>
    </style>

    <style name="Widget.TextView.SmokeSlate">
        <item name="android:textColor">@color/DarkSlate</item>
        <item name="android:textColorPrimaryInverse">@color/Smoke</item>
    </style>

    <style name="Widget.EditText.SmokeSlate">
        <item name="android:textColor">@color/Slate</item>
        <item name="android:textColorPrimaryInverse">@color/Smoke</item>
        <item name="android:textColorHint">@color/Slate</item>
    </style>

    <style name="Widget.Button.SmokeSlate">
        <item name="android:textColor">@color/Slate</item>
        <item name="android:textColorPrimaryInverse">@color/Smoke</item>
        <item name="android:background">@drawable/selector_smoke_slate</item>
    </style>

    <style name="Widget.GridCell.SmokeSlate">
        <item name="android:foreground">@drawable/selector_smoke_slate_grid_cell</item>
        <item name="cardBackgroundColor">?transBackground</item>
    </style>

    <style name="Widget.GridView.SmokeSlate">
        <item name="android:listSelector">@drawable/selector_smoke_slate_grid_view</item>
        <item name="android:background">@color/DarkSmoke</item>
    </style>

    <style name="Theme.Dialog.SmokeSlate">
        <item name="android:textColor">@color/Slate</item>
        <item name="android:textColorPrimaryInverse">@color/Smoke</item>
        <item name="android:background">@color/TransSmoke</item>
    </style>

</resources>
