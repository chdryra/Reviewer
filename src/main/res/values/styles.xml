<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Dividers -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/DarkGray</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/DarkGray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Buttons -->
    <style name="SquareImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_slate_smoke</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SimpleTransparentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- LoginButtons -->
    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="LoginButton.Centred">
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- GridViews -->
    <style name="GridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:numColumns">2</item>
        <item name="android:paddingLeft">@dimen/grid_view_left_padding</item>
        <item name="android:paddingRight">@dimen/grid_view_right_padding</item>
        <item name="android:stretchMode">none</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_view_vertical_spacing</item>
    </style>

    <!-- RecyclerViews -->
    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/grid_view_left_padding</item>
        <item name="android:paddingRight">@dimen/grid_view_right_padding</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_view_vertical_spacing</item>
    </style>

    <style name="FormattedRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/formatted_value_padding_left</item>
        <item name="android:paddingRight">@dimen/formatted_value_padding_right</item>
        <item name="android:paddingTop">@dimen/formatted_value_padding_top</item>
        <item name="android:paddingBottom">@dimen/formatted_value_padding_bottom</item>
        <item name="android:horizontalSpacing">@dimen/grid_view_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_view_vertical_spacing</item>
    </style>

    <!-- GridCells -->
    <style name="GridCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- ImageViews -->
    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Narrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">36dp</item>
    </style>


    <style name="Button.LeftLabel">
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <!-- TextViews -->
    <style name="TextViewGridCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/grid_item_text_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewGridCell.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewGridCell.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewGridCell.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TextViewGridCell.Bold.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextViewGridCell.Bold.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextViewGridCell.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewGridCell.Wrapped.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextViewGridCell.Wrapped.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextViewGridCell.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextViewGridCell.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/grid_item_text_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextView.Headline">
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FormattedTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/formatted_title_padding_top</item>
        <item name="android:paddingLeft">@dimen/formatted_title_padding_left</item>
        <item name="android:paddingRight">@dimen/formatted_title_padding_right</item>
        <item name="android:paddingBottom">@dimen/formatted_title_padding_bottom</item>
    </style>

    <style name="FormattedTitleValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingTop">@dimen/formatted_value_padding_top</item>
        <item name="android:paddingLeft">@dimen/formatted_value_padding_left</item>
        <item name="android:paddingRight">@dimen/formatted_value_padding_right</item>
        <item name="android:paddingBottom">@dimen/formatted_value_padding_bottom</item>
    </style>

    <style name="FormattedText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingTop">@dimen/formatted_value_padding_top</item>
        <item name="android:paddingLeft">@dimen/formatted_value_padding_left</item>
        <item name="android:paddingRight">@dimen/formatted_value_padding_right</item>
        <item name="android:paddingBottom">@dimen/formatted_value_padding_bottom</item>
    </style>

    <style name="FormattedText.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextView.Subject">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/subject_text_padding</item>
    </style>

    <!-- EditTexts -->
    <style name="EditTextBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditTextCapSentences">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="EditTextCapSentences.Add">
        <item name="android:imeOptions">actionGo</item>
    </style>

    <style name="EditTextCapSentences.Next">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextCapSentences.Done">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditTextCapSentences.Done.Subject">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/edit_text_subject_hint</item>
        <item name="android:padding">@dimen/subject_text_padding</item>
    </style>

    <style name="EditTextCapSentences.AutoComplete">
        <item name="android:completionThreshold">2</item>
    </style>

    <style name="EditTextCapSentences.AutoComplete.Add">
        <item name="android:imeOptions">actionGo</item>
    </style>

    <style name="EditTextCapSentences.AutoComplete.Next">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextCapSentences.AutoComplete.Done">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!-- Rating bars -->
    <style name="RatingBarFiveStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0.0</item>
    </style>

    <style name="RatingBarOneStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:numStars">1</item>
        <item name="android:rating">1.0</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarFiveStar.Indicator">
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarFiveStar.PointFiveStep">
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="RatingBarFiveStar.PointOneStep">
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="RatingBarFiveStar.Indicator.PointFiveStep">
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="RatingBarFiveStar.Indicator.PointOneStep">
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="RatingBarFiveStar.Indicator.PointOneStep.Formatted">
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- ToggleButton -->
    <style name="ToggleButtonStar">
        <item name="android:button">@android:drawable/btn_star</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:checked">true</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    
    <!-- Linear Layouts -->
    <style name="LinearLayoutVertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayoutVertical.GridCell">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearLayoutHorizontal.GridCell">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LinearLayoutHorizontal.GridCell.WrappedVertical">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutVertical.WrappedVertical">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutHorizontal.WrappedVertical">
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
