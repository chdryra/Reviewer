<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Slate Smoke -->
    <style name="Theme.Reviewer.TransSmoke">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/Widget.AutoCompleteTextView.TransSmoke
        </item>
        <item name="android:textViewStyle">@style/Widget.TextView.TransSmoke</item>
        <item name="android:editTextStyle">@style/Widget.EditText.TransSmoke</item>
        <item name="android:buttonStyle">@style/Widget.Button.TransSmoke</item>
        <item name="android:gridViewStyle">@style/Widget.GridView.TransSmoke</item>
        <item name="viewHolderStyle">@style/Widget.GridCell.TransSmoke</item>
        <item name="android:alertDialogTheme">@style/Theme.Dialog.TransSmoke</item>
        <item name="android:dialogTheme">@style/Theme.Dialog.TransSmoke</item>
    </style>

    <style name="Widget.AutoCompleteTextView.TransSmoke">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:textColorHint">@color/Smoke</item>
    </style>

    <style name="Widget.TextView.TransSmoke">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
    </style>

    <style name="Widget.EditText.TransSmoke">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:textColorHint">@color/Smoke</item>
    </style>

    <style name="Widget.Button.TransSmoke">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:background">@drawable/selector_smoke_slate</item>
    </style>

    <style name="Widget.GridCell.TransSmoke">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.GridView.TransSmoke">
        <item name="android:listSelector">@drawable/selector_smoke_slate_grid_view</item>
        <item name="android:background">@color/TransSlate</item>
    </style>

    <style name="Theme.Dialog.TransSmoke">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
