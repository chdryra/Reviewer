<LinearLayout style="@style/LinearLayoutHorizontal.WrappedVertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/review_subject"
        style="@style/TextViewGridCell.Bold.Small"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="start|center"
        android:padding="@dimen/grid_item_text_padding"/>

    <LinearLayout
        style="@style/LinearLayoutHorizontal.WrappedVertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/grid_item_text_padding">

        <TextView
            android:id="@+id/review_rating_number"
            style="@style/TextViewGridCell.Bold.Small"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:gravity="end|top"
            android:padding="2dp"/>

        <ToggleButton
            style="@style/ToggleButtonStar"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:button="@android:drawable/btn_star"
            android:gravity="start|top"/>

    </LinearLayout>
</LinearLayout>