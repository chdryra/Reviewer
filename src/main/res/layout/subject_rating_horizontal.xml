<LinearLayout
    style="@style/LinearLayoutHorizontal.WrappedVertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/LinearLayoutHorizontal.WrappedVertical"
        android:background="?dominantBackground">

        <TextView
            android:id="@+id/review_subject"
            style="@style/TextViewGridCell.Left.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center"
            android:padding="@dimen/grid_item_text_padding"/>

        <LinearLayout
            style="@style/LinearLayoutHorizontal"
            android:layout_width="match_parent"
            android:layout_gravity="end|center"
            android:layout_weight="4">

            <TextView
                android:id="@+id/review_rating_number"
                style="@style/TextViewGridCell.Bold.Large"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:gravity="end|center"
                android:padding="2dp"/>

            <ToggleButton
                style="@style/ToggleButtonStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_weight="1"
                android:button="@android:drawable/btn_star"
                android:gravity="end|center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
