<com.chdryra.android.mygenerallibrary.Viewholder.ViewHolderLayout
    style="@style/GridCell"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/LinearLayoutVertical.GridCell">

        <TextView
            android:id="@+id/string_text_view"
            style="@style/TextViewGridCell"
            android:layout_weight="1"/>

    <LinearLayout style="@style/LinearLayoutHorizontal.GridCell"
                  android:layout_weight="1">

        <TextView
            android:id="@+id/rating_text_view"
            style="@style/TextViewGridCell"
            android:gravity="end|center_vertical"
            android:text="4.0"
            android:layout_weight="1"/>

        <TextView
            style="@style/TextViewGridCell"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:drawableLeft="@android:drawable/btn_star_big_on"
            android:singleLine="true"
            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>

</com.chdryra.android.mygenerallibrary.Viewholder.ViewHolderLayout>