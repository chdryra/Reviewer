<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LineaLayoutVertical"
    android:gravity="center|bottom"
    android:layout_weight="1">

    <include
        android:id="@+id/login_email"
        android:gravity="center"
        layout="@layout/login_email"/>

    <include
        android:gravity="center"
        layout="@layout/line_with_or"/>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_button_google"
        style="@style/LoginButton"
        android:layout_gravity="center|bottom"
        android:text="@string/button_login_google"/>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_button_facebook"
        style="@style/LoginButton"
        android:layout_gravity="center|bottom"
        android:text="@string/button_login_facebook"/>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_button_twitter"
        style="@style/LoginButton"
        android:layout_gravity="center|bottom"
        android:text="@string/button_login_twitter"/>

</LinearLayout>