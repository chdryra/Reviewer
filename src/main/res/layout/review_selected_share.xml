<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutHorizontal.WrappedVertical">

    <LinearLayout style="@style/LinearLayoutHorizontal"
                  android:id="@+id/share"
                  android:layout_weight="1"
                  android:gravity="start|center">

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_comment_black_24dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share_black_24dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/bookmark_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:layout_gravity="center"
        android:background="@drawable/ic_bookmark_border_black_24dp"/>

</LinearLayout>
