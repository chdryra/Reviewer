<LinearLayout style="@style/LinearLayoutVertical.WrappedVertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/cluster_num_reviews_rating"
        layout="@layout/map_window_subject_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout style="@style/LinearLayoutVertical.WrappedVertical"
                  android:id="@+id/review_abstract">
        <TextView
            android:id="@+id/cluster_num_locations"
            style="@style/TextViewGridCell.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/review_headline"
            style="@style/TextViewGridCell.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/review_tags"
            style="@style/TextViewGridCell.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/review_date_location"
            style="@style/TextViewGridCell.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>