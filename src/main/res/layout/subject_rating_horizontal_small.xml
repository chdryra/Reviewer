<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutHorizontal.WrappedVertical">

    <LinearLayout
        style="@style/LinearLayoutHorizontal.WrappedVertical"
        android:background="?inverseDarkBackground">

        <TextView
            android:id="@+id/review_subject"
            style="@style/TextViewGridCell.Left.Small.Bold"
            android:textColor="?inverseText"
            android:padding="@dimen/grid_item_text_padding"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="start|center"
            android:layout_weight="1"/>

        <LinearLayout style="@style/LinearLayoutHorizontal"
                      android:layout_weight="4"
                      android:layout_width="match_parent"
                      android:layout_gravity="end|center">
            <TextView
                android:id="@+id/review_rating_number"
                style="@style/TextViewGridCell.Bold"
                android:textColor="?dominantBackground"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="end|center"
                android:layout_gravity="top"
                android:layout_weight="1"/>

            <ToggleButton
                android:button="@android:drawable/btn_star"
                style="@style/ToggleButtonStar"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
