<?xml version="1.0" encoding="utf-8"?>
<com.chdryra.android.reviewer.GridCellLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fact_label"
            style="@style/TextViewGridCell"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fact_value"
            style="@style/TextViewGridCell"
            android:layout_weight="1" />
    </LinearLayout>

</com.chdryra.android.reviewer.GridCellLayout>