<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSlateGray"
    android:orientation="vertical" >

    <include
        android:id="@+id/review_subject_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/fragment_review_subject" />

    <View style="@style/HorizontalDivider" />

    <include
        android:id="@+id/total_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        layout="@layout/fragment_review_rating" />

    <View style="@style/HorizontalDivider" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    
        <include
            android:id="@+id/banner_button_left"
	      	android:layout_width="0dp"
	      	android:layout_height="wrap_content"
	      	android:layout_weight="1"
	      	layout="@layout/banner_button" />

    	<View style="@style/VerticalDivider" />
    	<View style="@style/VerticalDivider" />

    	<include
            android:id="@+id/banner_button_right"
	      	android:layout_width="0dp"
	      	android:layout_height="wrap_content"
	      	android:layout_weight="1"
	      	layout="@layout/banner_button" />
	</LinearLayout>

    <View style="@style/HorizontalDivider" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
	    
    	<include
	        android:id="@+id/data_gridview_left"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        layout="@layout/grid_view_data" />
	    
    	<include
	        android:id="@+id/data_gridview_right"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        layout="@layout/grid_view_data" />
	</LinearLayout>
    
    
</LinearLayout>