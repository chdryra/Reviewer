<?xml version="1.0" encoding="utf-8"?>
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/add_image_location_linear_layout"
		android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal">
    
    <LinearLayout
       	android:id="@+id/add_image_linear_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="1">
        
	 	<ImageButton 
	 	    android:id="@+id/add_photo_image_button"
	 	    android:src="@drawable/ic_menu_camera"
	 	    android:background="@android:color/transparent"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_gravity="center_horizontal"
	 	    android:scaleType="centerInside"
	 	    android:contentDescription="@string/button_add_image_text"
	     />
   	
	 	<View style="@style/HorizontalDivider"/>
	 	
	   	 <EditText 
	   	     android:id="@+id/image_caption_edit_text"
	   	     android:layout_width="match_parent"
	   	     android:layout_height="wrap_content"
	   	     android:inputType="textCapSentences"
	   	     android:hint="@string/edit_text_image_caption_hint"
	   	     android:textSize="@dimen/list_item_textSize"
	   	     android:cursorVisible="false"
	   	     android:scrollHorizontally="false"
	   	     android:layout_gravity="bottom"/>

	   	<View style="@style/HorizontalDivider"/>
	   	 	   	
	</LinearLayout>
	
<!-- 	<View -->
<!-- 	    android:id="@+id/review_optional_buttons_captions_separator" -->
<!--     	style="@style/VerticalDivider"/> -->
   	 
   	<LinearLayout
       	android:id="@+id/add_location_linear_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="1">
    
	 	<ImageButton 
	 	    android:id="@+id/add_location_image_button"
	 	    android:src="@drawable/ic_menu_mylocation"
	 	    android:background="@android:color/transparent"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:layout_gravity="center_horizontal"
	 	    android:scaleType="centerInside"
	 	    android:contentDescription="@string/button_add_location_text"
	     />

	 	<View style="@style/HorizontalDivider"/>
	 	
		<TextView
   	     android:id="@+id/map_caption_text"
   	     android:layout_width="match_parent"
   	     android:layout_height="wrap_content"
   	     android:hint="@string/edit_text_map_caption_hint"
   	     android:textSize="@dimen/list_item_textSize"
   	     style="?android:attr/editTextStyle"/>
	 	
		<View style="@style/HorizontalDivider"/>
		
	</LinearLayout>
	
</LinearLayout>