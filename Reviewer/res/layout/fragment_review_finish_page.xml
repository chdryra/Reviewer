<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/review_subject_finish_page" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        style="?android:textAppearanceLarge"
        android:gravity="center"
       />        

    <View
        android:id="@+id/review_subject_separator_finish_page"
    	style="@style/HorizontalDivider"
    	android:layout_below="@id/review_subject_finish_page"/>
    
    <RatingBar
        android:id="@+id/total_rating_bar_finish_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_subject_separator_finish_page"
    	android:layout_centerInParent="true"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.5" 
        android:isIndicator="true"
        android:clickable="true"/>

    <View
        android:id="@+id/total_rating_bar_separator_finish_page"
    	style="@style/HorizontalDivider"
    	android:layout_below="@id/total_rating_bar_finish_page"/>
    
    <LinearLayout 
        android:id="@+id/linear_layout_criteria_rating_bars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/total_rating_bar_finish_page"
        android:clickable="true">
        
    </LinearLayout>	
    
    <View
        android:id="@+id/linear_layout_criteria_rating_bars_separator"
    	style="@style/HorizontalDivider"
    	android:layout_below="@id/linear_layout_criteria_rating_bars"/>

   	 <include  
        layout="@layout/review_optional_buttons"
        android:id="@+id/review_optional_buttons"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
 		android:layout_below="@id/linear_layout_criteria_rating_bars_separator"
     	/>

   	 <View
        android:id="@+id/review_optional_buttons_separator"
    	style="@style/HorizontalDivider"
    	android:layout_below="@id/review_optional_buttons"/>
   	 
    <TextView        
       	android:id="@+id/comment_text_view"
        android:hint="@string/edit_text_add_comment_hint"
        style="?android:attr/editTextStyle"
        android:layout_below="@id/review_optional_buttons_separator"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="top|left"
		android:clickable="true"
	        />

     <View
        android:id="@+id/comment_separator"
    	style="@style/HorizontalDivider"
    	android:layout_below="@id/comment_text_view"/>
   	 
</RelativeLayout>
</ScrollView>