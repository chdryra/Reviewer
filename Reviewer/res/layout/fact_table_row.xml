<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/datum_table_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_long_click_background_activated"
    android:longClickable="true" >

    <TextView
        android:id="@+id/datum_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1"
        android:textSize="@dimen/list_item_textSize" />

    <TextView
        android:id="@+id/datum_value_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
        android:textSize="@dimen/list_item_textSize" />

</TableRow>