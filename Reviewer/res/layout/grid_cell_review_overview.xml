<?xml version="1.0" encoding="utf-8"?>
<com.chdryra.android.reviewer.GridCellLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GridCell" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/review_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_review_cd"/> 
        
	    <LinearLayout
	        style="@style/LineaLayoutVertical.GridCell">
	
	        <TextView
	            android:id="@+id/review_subject"
	            style="@style/TextViewGridCell"
	            android:layout_weight="1" />
	
	        <RatingBar
	            android:id="@+id/review_rating_bar"
	            android:layout_weight="1"
	            style="@style/RatingBarFiveStar.Indicator.PointFiveStep"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="center"
	            android:focusable="false"
	            android:gravity="center"
	            android:isIndicator="true"
	            android:numStars="5"
	            android:rating="0.0"
	            android:stepSize="0.5" />
	        
	        <TextView 
	            android:id="@+id/review_location"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <TextView 
	            android:id="@+id/review_publish_data"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	    </LinearLayout>
    </RelativeLayout>
</com.chdryra.android.reviewer.GridCellLayout>