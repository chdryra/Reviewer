<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/list_item_leftPadding"
    android:layout_marginRight="@dimen/list_item_rightPadding" >
         
    <EditText
        android:id="@+id/review_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/subject_name" 
        android:cursorVisible="false"
       />
 
    <TextView
        android:id="@+id/review_subject_separator"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@id/review_subject"
        />

    <RatingBar
        android:id="@+id/total_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_subject_separator"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:rating="0.0"
        android:stepSize="0.5" />
    
    <TextView
        android:id="@+id/total_rating_bar_separator"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@id/total_rating_bar"
        />

    <Button
        android:id="@+id/add_criterion_button"
        style="@android:style/Widget.Button.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_intraPadding"
        android:text="@string/button_add_criterion_text"
        android:layout_below="@id/total_rating_bar_separator" 
        />
    
    <ListView
        android:id="@+id/criterion_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add_criterion_button" >
    </ListView>
