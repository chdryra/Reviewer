<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:longClickable="true"
    android:background="@drawable/list_long_click_background_activated">

    <TextView
        android:id="@+id/info_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/list_item_textSize"
        android:layout_weight="1" 
       />
    
    <EditText
        android:id="@+id/info_value_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/list_item_textSize"
        android:inputType="numberDecimal"
        android:hint="@string/edit_text_info_value_hint"
        android:layout_weight="1" 
       />
    
    <TextView
        android:id="@+id/info_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/list_item_textSize"
        android:layout_weight="1" 
       />
     		      
	</LinearLayout>
