<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LineaLayoutWrappedVertical" >

    <ImageView
        android:id="@+id/dialog_image_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/dialog_image_content_description"
        android:scaleType="centerInside" />

    <com.chdryra.android.myandroidwidgets.ClearableEditText
        android:id="@+id/dialog_image_caption_edit_text"
		style="@style/EditTextCapSentences.Done"
		android:cursorVisible="false"
	    android:hint="@string/edit_text_image_caption_hint"/>

</LinearLayout>