<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Themes -->
    <color name="Slate">@color/LightSlateGray</color>
    <color name="Smoke">@color/WhiteSmoke</color>
    <style name="ThemeSlateSmoke"
        parent="@style/Theme.Sherlock.Light">
        <item name="android:windowBackground">@color/Slate</item>
        <item name="android:colorBackground">@color/Slate</item>
        <item name="android:textColor">@color/Smoke</item>
	    <item name="android:textColorPrimaryInverse">@color/Slate</item>
		<item name="android:autoCompleteTextViewStyle">@style/ACTextViewSlateSmoke</item>
	   	<item name="android:textViewStyle">@style/TextViewSlateSmoke</item>
        <item name="android:editTextStyle">@style/EditTextSlateSmoke</item>
        <item name="android:buttonStyle">@style/ButtonSlateSmoke</item>
        <item name="android:gridViewStyle">@style/GridViewSlateSmoke</item>
        <item name="gridCellStyle">@style/GridCellSlateSmoke</item>
        <item name="android:alertDialogTheme">@style/DialogThemeSlateSmoke</item>
        <item name="android:dialogTheme">@style/DialogThemeSlateSmoke</item>
    </style>

    <style name="ACTextViewSlateSmoke" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorHint">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
    </style>
    
    <style name="TextViewSlateSmoke" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
    </style>

    <style name="EditTextSlateSmoke" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:textColorHint">@color/Smoke</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    
    <style name="ButtonSlateSmoke" parent="@style/Widget.Sherlock.ActionButton">
        <item name="android:textColor">@color/Smoke</item>
        <item name="android:textColorPrimaryInverse">@color/Slate</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>
    
    <style name="GridCellSlateSmoke">
        <item name="android:background">@color/Slate</item>
    </style>
    
    <style name="GridViewSlateSmoke" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/grid_cell_selector_slate_smoke</item>
    </style>
     
   	<style name="DialogThemeSlateSmoke" parent="@android:style/Theme.Dialog">
		<item name="android:textColor">@color/Smoke</item>
		<item name="android:textColorPrimaryInverse">@color/Slate</item>
		<item name="android:background">@color/Slate</item>
   	</style>
    
</resources>
