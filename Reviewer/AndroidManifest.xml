<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chdryra.android.reviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />
	 <permission 
        android:name="com.chdryra.android.reviewer.permission.MAPS_RECEIVE"
        android:protectionLevel="signature"/>
    <uses-permission android:name="com.chdryra.android.reviewer.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
	<uses-feature 
	    android:name="android.harware.location.gps"
	    android:required="false"/>
	<uses-feature 
	    android:required="true"
	    android:glEsVersion="0x00020000"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Reviewer.SlateSmoke" >
        
        <!-- Create Review -->
        <activity
            android:name="com.chdryra.android.reviewer.ActivityReviewBuild"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/activity_title_review_create" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Share -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewShare"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_share" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>
        
        <!-- Criteria -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewCriteria"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_children" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <!-- Images -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewImages"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_image" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>
        
        <!-- Links -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewURLs"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_url" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <!-- Browser choose link -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewURLBrowser"
		    android:theme="@style/Theme.Reviewer"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_url" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewURLs" />
        </activity>
        
        <!-- Map choose location -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewLocationMap"
		    android:theme="@style/Theme.Reviewer"
		    android:launchMode="singleTop"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_location" 
            android:screenOrientation="portrait">
	        <intent-filter>
	            <action android:name="android.intent.action.SEARCH" />
	        </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewLocations" />
            <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable_location_map"/>
        </activity>

        <!-- Locations -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewLocations"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_location" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
            
        </activity>
        
        <!-- Comments -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewComments"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_comment" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <!-- Facts -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewFacts"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_facts" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <!-- ProCons -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewProsCons"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_procon" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <!-- Tags -->
        <activity android:name="com.chdryra.android.reviewer.ActivityReviewTags"
		    android:windowSoftInputMode="adjustPan"
		    android:configChanges="orientation"
		    android:exported="true"
            android:label="@string/activity_title_tags" 
            android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chdryra.android.reviewer.ActivityReviewBuild" />
        </activity>

        <meta-data 
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCZ_ArQmEClJYtDtvbcbSQQbvUcCZf3KWg"/>
    </application>
</manifest>
